{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@packages/app/*": [ "packages/app/src/*" ],
      "@packages/web/*": [ "packages/web/src/*" ],
      "@packages/desktop-ui/*": [ "packages/desktop-ui/src/*" ],
      "@packages/desktop/*": [ "packages/desktop/src/*" ],
      "@packages/types/*": [ "packages/types/src/*" ],
      "@packages/components/*": [ "packages/components/src/*" ]
    }
  },
  "include": ["packages"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
